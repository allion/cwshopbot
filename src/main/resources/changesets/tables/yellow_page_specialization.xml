<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="yellow_page_specialization" author="maratik">
        <createTable tableName="yellow_page_specialization">
            <column name="yellow_page" type="text">
                <constraints nullable="false" referencedTableName="yellow_page" referencedColumnNames="link"
                             foreignKeyName="fk_yellow_page"/>
            </column>
            <column name="specialization" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="yellow_page_specialization" columnNames="yellow_page, specialization"/>
    </changeSet>
    <changeSet id="yellow_page_specialization_fillfactor" author="maratik">
        <sql>
            ALTER TABLE yellow_page_specialization SET (fillfactor = 90)
        </sql>
    </changeSet>
    <changeSet id="yellow_page_specialization_collation" author="maratik">
        <modifyDataType tableName="yellow_page_specialization" columnName="yellow_page" newDataType="text collate &quot;C&quot;"/>
        <modifyDataType tableName="yellow_page_specialization" columnName="specialization" newDataType="text collate &quot;C&quot;"/>
    </changeSet>
    <changeSet id="yellow_page_specialization_collation_2" author="maratik">
        <sql>
            ALTER TABLE yellow_page_specialization ALTER COLUMN yellow_page TYPE TEXT COLLATE "C" USING (yellow_page::TEXT);
            ALTER TABLE yellow_page_specialization ALTER COLUMN specialization TYPE TEXT COLLATE "C" USING (specialization::TEXT);
        </sql>
    </changeSet>
</databaseChangeLog>
